{
    "name": "YouTube Timer",
    "version": "0.1.0",
    "description": "Limits the amount of time you can spend on YouTube",
    "permissions": ["tabs", "storage", "scripting", "declarativeNetRequest"],
    "host_permissions": ["<all_urls>"],
    "icons": {
      "128": "/icons/YouTubeTimer128.png",
      "48": "/icons/YouTubeTimer48.png",
      "32": "/icons/YouTubeTimer32.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_title": "YouTube Timer",
      "default_popup": "pages/popup.html"
    },
    "manifest_version": 3
}
